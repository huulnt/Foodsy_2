<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:id="@+id/frame_noti"
        android:layout_width="72dp"
        android:layout_height="72dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/margin_8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/margin_16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/margin_8dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bglogin5"
            android:scaleType="centerCrop"/>
    </FrameLayout>
    <TextView
        android:id="@+id/text_view_ago_noti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 giờ trước"
        android:textSize="18dip"
        android:paddingRight="@dimen/margin_16dp"
        android:textColor="@color/colorPrimary"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/text_view_nameFood"
        android:layout_marginRight="0dp" />
    <TextView
        android:id="@+id/text_view_nameFood"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:layout_marginLeft="@dimen/margin_16dp"
        app:layout_constraintLeft_toRightOf="@id/frame_noti"
        app:layout_constraintRight_toLeftOf="@id/text_view_ago_noti"
        android:textSize="19dip"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/margin_4dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/text_view_food_decription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text_view_nameFood"
        android:layout_marginTop="@dimen/margin_4dp"
        app:layout_constraintLeft_toRightOf="@id/frame_noti"
        android:layout_marginLeft="@dimen/margin_16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/margin_16dp"
        android:textSize="16dip"
        android:maxLines="2"
        android:text="adadha akdad a dadadj ad adha ad ad   ad ad aldj ad  ad ajd  adj \" />
</android.support.constraint.ConstraintLayout>