<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".50"/>
    <android.support.constraint.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".30"/>
    <ImageView
        android:id="@+id/image_view_bookmark"
        android:layout_width="0dp"
        android:layout_height="162dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/margin_8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="@dimen/margin_4dp"
        android:layout_marginRight="@dimen/margin_4dp"
        android:src="@drawable/bglogin5"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/text_view_namePlace_bookmark"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/image_view_bookmark"
        android:layout_marginTop="@dimen/margin_4dp"
        app:layout_constraintLeft_toLeftOf="@id/image_view_bookmark"
        app:layout_constraintRight_toRightOf="@id/image_view_bookmark"
        android:text="@string/app_name"
        android:textSize="19dip"
        android:textStyle="bold"
        android:gravity="center"
        android:maxLines="1"/>
    <Button
        android:id="@+id/button_ago_boormark"
        android:layout_width="0dp"
        android:layout_height="32dp"
        app:layout_constraintLeft_toLeftOf="@id/image_view_bookmark"
        app:layout_constraintRight_toRightOf="@id/image_view_bookmark"
        app:layout_constraintTop_toBottomOf="@id/text_view_namePlace_bookmark"
        android:gravity="center"
        android:text="Ready in 20 Mins"
        android:textSize="13dip"
        android:background="@drawable/bg_button_selected4"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="@dimen/margin_4dp"
        android:layout_marginLeft="@dimen/margin_12dp"
        android:layout_marginRight="@dimen/margin_12dp"
        android:textAllCaps="false"/>
</android.support.constraint.ConstraintLayout>