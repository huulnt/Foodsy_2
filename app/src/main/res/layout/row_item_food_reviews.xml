<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/image_view_avatar_reviews"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/bglogin5"
        app:civ_border_width="2dp"
        android:layout_gravity="center_horizontal"
        app:civ_border_color="#FFF"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/margin_16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/margin_8dp"
        />
    <TextView
        android:id="@+id/text_view_displayName_reviews"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/image_view_avatar_reviews"
        android:layout_marginLeft="@dimen/margin_16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_8dp"
        android:text="Tony"
        android:textSize="19dip"
        android:textStyle="bold"
        android:maxLines="1"/>

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/text_view_displayName_reviews"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/CustomRatingBar"
        android:scaleX=".7"
        android:scaleY=".7"
        android:rating="3.5"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginLeft="8dp" />
    <TextView
        android:layout_width="0dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/text_view_displayName_reviews"
        app:layout_constraintLeft_toRightOf="@id/image_view_avatar_reviews"
        android:layout_marginLeft="@dimen/margin_16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:text="July 20th 2017"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/image_view_avatar_reviews"
        android:layout_marginTop="@dimen/margin_8dp"
        app:layout_constraintLeft_toLeftOf="@+id/image_view_avatar_reviews"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/margin_16dp"
        android:text="Thịt Cò và Gà ngon khỏi bàn luôn, được cái là chất lượng thực phẩm chuẩn, Anh chủ quán rất dễ thương và thân thiện..."
        android:layout_marginLeft="8dp" />
</android.support.constraint.ConstraintLayout>